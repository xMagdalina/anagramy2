#include <iostream>
#include <fstream>
#include <string>
using namespace std;

bool isAnagram(string x1, string x2){

       if(x1.length() != x2.length() )
   return false;

   for (int i=0; i<x1.length(); i++)
{
     if (x1[i] = x2[i])

        return true;
}
}
string stringSort(string s)
{
string napis(s);
int dlugosc = napis.length();

for(int i=0; i<dlugosc-1; i++)
   {
        for(int j=0; j<dlugosc-1; j++)
    {
        if(napis[j]>napis[j+1])
        {
            char litera = napis[j];
            napis[j] = napis[j+1];
            napis[j+1] = litera;
        }
}
}
return napis;
}
int main(int argc, char** argv) {

ifstream plik1;
    ofstream plik2;

    string linia1;
    string linia2;

    string x1;
    string x2;

plik1.open("ana.txt");
plik2.open("ana2.txt");

   plik2<<"["<<endl;

while(!plik1.eof()){

   getline(plik1,linia1); 

   for(int i=0;i<2;i++){

    getline(plik1,linia2);


    x1 = stringSort(linia1);
    x2 = stringSort(linia2);

   if(isAnagram(x1,x2))
{
plik2<<"{\"slowo\": \""<<linia1<<"\", \"anagram\":"<<"\""<<x1<<"\"},";
plik2<<"{\"slowo\": \""<<linia2<<"\", \"anagram\":"<<"\""<<x2<<"\"}"<<endl;
}

linia2 = linia1;
}
}
   plik2<<"]";

plik1.close();
plik2.close();

return 0;
}
